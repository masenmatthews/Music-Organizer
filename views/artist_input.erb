<div class="jumbotron">
  <h1>Music Organizer</h1>
</div>

<form action="/" method="post">
  <div class="form-group">
    <h2>Input artist</h2>
    <input name="artist" class="form-control" type="text" placeholder= "Enter artist"><br>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button class="btn btn-primary" id="clear" formaction='/clear'>Clear</button>
  </div>
  <div id="output">
    <h2>ARTISTS</h2><br>

    <% @artist_list.each do |x| %>
      <h4><a href="/artist/<%= x.name %>"><%= x.name %></a></h4>

    <!-- <h4><%= x.genre %></a></h4> -->
    <% end %>

  </div>
</form>
